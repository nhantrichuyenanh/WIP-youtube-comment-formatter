{
    "manifest_version": 3,
    "name": "YouTube Comment Formatter",
    "version": "1.0.3",
    "author": "Nhân Trí",
    "description": "Makes life easier by implementing buttons and hotkeys to format your YouTube comments and replies.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
    "https://www.youtube.com/watch?*",
    "https://www.youtube.com/shorts/*",
    "https://www.youtube.com/channel/*/community?*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
        "strict_min_version": "109.0"
        }
    }
}